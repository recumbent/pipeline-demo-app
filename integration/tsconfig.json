{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
